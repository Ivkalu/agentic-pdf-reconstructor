{
  "name": "agent-pdf-reconstruction",
  "version": "2.0.0",
  "description": "Agentic PDF reconstructor + video analyzer with web interface",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs');fs.cpSync('src/public','dist/public',{recursive:true})\"",
    "start": "node dist/index.js",
    "serve": "node dist/server/index.js",
    "dev": "tsx src/index.ts",
    "dev:server": "tsx src/server/index.ts",
    "docker:build": "docker compose build",
    "docker:run": "docker compose run --rm app"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.14",
    "@langchain/core": "^0.3.37",
    "@langchain/langgraph": "^0.2.44",
    "cors": "^2.8.5",
    "density-clustering": "^1.3.0",
    "express": "^4.21.2",
    "ml-kmeans": "^6.0.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.12.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
